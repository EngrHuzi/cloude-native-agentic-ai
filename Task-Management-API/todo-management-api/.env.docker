# Docker Compose Environment Configuration
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=todo_db
POSTGRES_PORT=5432

# API Configuration
API_PORT=8000

# Database URL (automatically constructed from PostgreSQL settings)
# This will be set automatically in docker-compose.yaml
# DATABASE_URL=postgresql://postgres:password@postgres:5432/todo_db

# Authentication Configuration
# IMPORTANT: Generate a secure SECRET_KEY for production
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
DEBUG=False
